{
  "private": true,
  
  "scripts": {
    "start": "browser-sync start --server 'src' --no-notify --no-ui --cwd 'src' --file 'index.html'",
    "test": "editorconfig-checker --exclude '.git|node_modules|.DS_Store'",
    "html": "html-minifier --remove-comments --collapse-whitespace --input-dir src --output-dir dist --file-ext html",
    "build": "npm run html",
    "deploy": "cd dist && rsync --archive --compress --delete . araragitestbucket.storage.yandexcloud.net"
    },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "editorconfig-checker": "^3.0.4",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^7.1.1",
    "postcss-csso": "^4.0.0",
    "postcss-import": "^12.0.1"
  }
}
